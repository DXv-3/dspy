{
  "type": "object",
  "required": [
    "direct_answer",
    "key_points",
    "explanation",
    "likely_follow_ups",
    "next_actions",
    "deliverable"
  ],
  "properties": {
    "direct_answer": { "type": "string", "maxLength": 500 },
    "key_points": {
      "type": "array",
      "minItems": 2,
      "items": { "type": "string" }
    },
    "explanation": { "type": "string" },
    "likely_follow_ups": {
      "type": "array",
      "minItems": 2,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": ["question", "short_answer"],
        "properties": {
          "question": { "type": "string" },
          "short_answer": { "type": "string" }
        }
      }
    },
    "next_actions": { "type": "array", "items": { "type": "string" } },
    "deliverable": {
      "type": "object",
      "required": ["type", "files"],
      "properties": {
        "type": { "enum": ["code", "config", "patch", "mixed"] },
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path", "content"],
            "properties": {
              "path": { "type": "string" },
              "content": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
